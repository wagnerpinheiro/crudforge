
                <ul class="ulButtons">

                {%- for action in record_actions %}

                    <li>
                        <a class="cssButton" href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': entity.id }) }}" }}">
                        {% if action == 'show' %}
                        detalhar
                        {% elseif action == 'edit' %}
                        editar
                        {% else %}
                        {{ action }}
                        {% endif %}
                        </a>
                    </li>

                {%- endfor %}

                </ul>
